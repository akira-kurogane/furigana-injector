DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@
	
include $(DEPTH)/config/autoconf.mk
	
MODULE = furiganainjector

#should public be dropped?
DIRS		= public XPCOM_src
	
XPI_NAME		= furiganainjector
INSTALL_EXTENSION_ID	= furiganainjector@yayakoshi.net
XPI_PKGNAME		= furiganainjector

#This "export" step is processed before compilation, or packaging into an *.xpi.
export::
	if [ ! -f $(srcdir)/XPCOM_src/mecab_0-97/config.h ]; then echo Error: mecab config.h file is missing- needs to be placed there manually; exit 1; fi
	if [ ! \( -f $(FINAL_TARGET)/mecab/dic/ipadic/sys.dic -a -f $(FINAL_TARGET)/mecab/dic/ipadic/unk.dic -a -f $(FINAL_TARGET)/mecab/dic/ipadic/char.bin -a -f $(FINAL_TARGET)/mecab/dic/ipadic/matrix.bin -a -f $(FINAL_TARGET)/mecab/dic/ipadic/dicrc \) ]; then $(NSINSTALL) -D $(FINAL_TARGET)/mecab/dic/ipadic; echo Error: all mecab dictionary resource files need to be copied to $(FINAL_TARGET)/mecab/dic/ipadic/; exit 1; fi


#The "libs" target is being used as it occurs at a suitable stage inbetween compilation and packaging/zipping of the *.xpi file. A 'pre-package' target would be more ideal.

#Copy the top-level files (if they match a '*.*' filename pattern) and recursively copy all the directories listed.
libs::
	$(NSINSTALL) $(srcdir)/*.* $(FINAL_TARGET)/
	cp -r $(srcdir)/content $(FINAL_TARGET)/
	cp -r $(srcdir)/defaults $(FINAL_TARGET)/
	cp -r $(srcdir)/locale $(FINAL_TARGET)/
	cp -r $(srcdir)/public $(FINAL_TARGET)/
	cp -r $(srcdir)/skin $(FINAL_TARGET)/

#Recursively copy XPCOM_src/SimpleMecab, but only select files in XPCOM_src/mecab_0-97
libs::
	$(NSINSTALL) -D $(FINAL_TARGET)/XPCOM_src
	cp -r $(srcdir)/XPCOM_src/SimpleMecab $(FINAL_TARGET)/XPCOM_src/
	$(NSINSTALL) $(srcdir)/XPCOM_src/Makefile.in $(FINAL_TARGET)/XPCOM_src/
	$(NSINSTALL) -D $(FINAL_TARGET)/XPCOM_src/mecab_0-97/src
	$(NSINSTALL) $(srcdir)/XPCOM_src/mecab_0-97/README.furiganainjector $(FINAL_TARGET)/XPCOM_src/mecab_0-97/
	$(NSINSTALL) $(srcdir)/XPCOM_src/mecab_0-97/Makefile.in $(FINAL_TARGET)/XPCOM_src/mecab_0-97/
	$(NSINSTALL) $(srcdir)/XPCOM_src/mecab_0-97/src/Makefile.in $(FINAL_TARGET)/XPCOM_src/mecab_0-97/src/

#Mecab resource directory: copy only the contents of mecab/etc and the README in /mecab/dic/ipadic. The binary dictionary files and the dicrc file need to place manually.
libs::
	$(NSINSTALL) $(srcdir)/mecab/dic/ipadic/README $(FINAL_TARGET)/mecab/dic/ipadic
	$(NSINSTALL) $(srcdir)/mecab/etc/* $(FINAL_TARGET)/mecab/etc

#DIST_FILES = install.rdf	#This DIST_FILES list is being disabled because the copy commands in the "export::" section above are achieving the same effect
	
include $(topsrcdir)/config/rules.mk
